# ============================================
# Database Configuration (Required)
# ============================================
DATABASE_URL=mysql://user:password@host:3306/housing_management

# ============================================
# Authentication (Required)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
OWNER_OPEN_ID=admin-owner

# ============================================
# Application
# ============================================
PORT=3000
NODE_ENV=production
VITE_APP_ID=housing-management

# ============================================
# OpenAI API (Required for OCR & AI features)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# ============================================
# S3 Storage (Optional - for image uploads)
# If not configured, images will be stored locally
# ============================================
# S3_ENDPOINT=https://your-s3-endpoint.com
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET=housing-uploads
# S3_REGION=auto
